# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php}]
indent_style = space
indent_size = 4

[*.{feature}]
indent_style = space
indent_size = 2

[*.{yml}]
indent_style = space
indent_size = 2

[{composer.json,infection.json.dist}]
indent_style = space
indent_size = 2
